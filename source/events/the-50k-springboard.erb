<% content_for(:title) { "Event - #{current_page.data.title}" } %>

<div class="event">
  <div class="event__container">
    <h1 class="event__title">
      <%= current_page.data.title %>:
    </h1>

    <h2 class="event__subtitle">
      <%= current_page.data.subtitle %>
    </h2>


    <div class="event__detail">
      <i class="fa fa-users event__detail-icon"></i>
      <div>
        <h3 class="event__detail-title">
          <%= current_page.data.who_should_attend_title %>
        </h3>
        <p>
          <%= current_page.data.who_should_attend.join(', ') %>
        </p>
      </div>
    </div>

    <time class="event__detail" datetime="<%= current_page.data.date_time %>">
      <i class="fa fa-calendar event__detail-icon"></i>
      <div>
        <h3 class="event__detail-title">
          <%= current_page.data.date %>
        </h3>
        <p>
          <%= current_page.data.time %>
        </p>
      </div>
    </time>
  </div>

  <a class="event-location" href="https://www.google.com/maps/place/<%= current_page.data.location %>/" data-header-waypoint>
    <img class="event-location__map" src="http://maps.googleapis.com/maps/api/staticmap?size=375x100&markers=color:red%7C<%= current_page.data.location %>&sensor=false&scale=2" alt="Google Map of <%= current_page.data.location %>" target="_blank">
    <div class="event-location__overlay">
      <i class="fa fa-map-marker event-location__pin"></i>
      <address class="event-location__address">
        <%= current_page.data.location %>
      </address>
    </div>
  </a>

  <div class="event__container">
    <a class="event__cta" href="<%= current_page.data.cta.url %>">
      <span class="event__cta-text"><%= current_page.data.cta.text %></span>
      <span class="event__cta-price"><%= current_page.data.cta.price %></span>
    </a>

    <div class="event-content">
      <p class="event-content__text">
        <%= current_page.data.content.introduction %>
      </p>

      <h4 class="event-content__title">
        <%= current_page.data.content.find_out_title %>:
      </h4>

      <ul class="event-content__list">
        <% current_page.data.content.find_out.each do |item| %>
          <li>
            <%= item %>
          </li>
        <% end %>
      </ul>

      <h4 class="event-content__title">
        <%= current_page.data.content.responsible_for_title %>:
      </h4>

      <ul class="event-content__list">
        <% current_page.data.content.responsible_for.each do |item| %>
          <li>
            <%= item %>
          </li>
        <% end %>
      </ul>
    </div>

    <h4 class="event-content__title event-speaker__title">
      Speakers
    </h4>

    <% current_page.data.speakers.each do |speaker| %>
      <div class="event-speaker">
        <div class="event-speaker__info">
          <img class="event-speaker__image" src="<%= speaker.image %>" alt="<%= speaker.name %>">
          <div>
            <div class="event-speaker__info-text">
              <%= speaker.name %>
            </div>
            <div class="event-speaker__info-text">
              <%= speaker.role %>
            </div>
            <a class="event-speaker__twitter" href="https://twitter.com/intent/user?screen_name=<%= speaker.twitter %>">
              @<%= speaker.twitter %>
            </a>
          </div>
        </div>

        <div class="event-speaker__text">
          <%= speaker.bio %>
        </div>
      </div>
    <% end %>

    <a class="event__cta" href="<%= current_page.data.cta.url %>">
      <span class="event__cta-text"><%= current_page.data.cta.text %></span>
      <span class="event__cta-price"><%= current_page.data.cta.price %></span>
    </a>

    <aside class="event-contact">
      <img class="event-contact__image" src="/assets/images/people/<%= current_page.data.questions.person.name %>.png" alt="<%= current_page.data.questions.person.first_name %>"/>
      <div>
        <p class="event-contact__title">
          <%= current_page.data.questions.title %>
        </p>
        <p class="event-contact__text">
          Get in touch with <a class="event-contact__link" href="mailto:<%= current_page.data.questions.mailto.to %>?Subject=<%= current_page.data.questions.mailto.subject %>" target="_top"><%= current_page.data.questions.person.first_name %></a>, our <%= current_page.data.questions.person.role %>.
        </p>
      </div>
    </aside>
  </div>
</div>

