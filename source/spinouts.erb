<header class="page-header page-header--bottom-margin">
  <div class="page-header__container">
    <h1 class="page-header__title">
      <%= current_page.data.header.title %>
    </h1>

    <p class="page-header__subtitle">
      <%= current_page.data.header.subtitle %>
    </p>
  </div>
</header>

<div class="container" data-header-waypoint>
  <% current_page.data.spinouts.each do |project| %>
    <section class="component--spinouts">
      <div class="component__tile text-tile">

        <h2 class="text-tile__title--lowercase">
          <%= project.title %>
        </h2>

        <p class="text-tile__paragraph--with-spacing">
          <span>Why: </span><%= project.why_text %>
        </p>
        <p class="text-tile__paragraph--with-spacing">
          <span>What: </span><%= project.what_text %>
        </p>

        <p class="text-tile__paragraph--with-spacing">
          <span>Who: </span><%= project.who_text %>
        </p>
      </div>

      <div class="component__tile image-tile">
        <%= image_tag project.image, alt: project.image_description, class: "image-tile__image", srcset: retina_srcset(project.image) %>
      </div>
    </section>
  <% end %>
</div>
