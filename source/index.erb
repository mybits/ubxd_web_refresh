        <form class="homepage-contact" action="//formspree.io/tom.sabin@unboxedconsulting.com" method="POST">
          <input type="text" name="_gotcha" style="display:none" />
          <input type="hidden" name="_subject" value="Homepage enquiry">
          <input type="email" name="_replyto" placeholder="Your email" >
          <textarea name="comment"></textarea>
          <input type="submit" value="send">
        </form>
      </div>
    </div>
    <div class="component__tile image-tile">
      <img class="image-tile__image" src="http://placehold.it/480/496" alt="" />
    </div>
  </div>

  <div class="homepage-latest">
    <h2 class="homepage-latest__title">
      What we have been blogging about
    </h2>

    <% blog.articles.reject { |article| article.data.weekly_roundup? }.first(3).each do |article| %>
      <a class="homepage-blog-tile" href="<%= article.url %>">
        <div class="homepage-blog-tile__content">
          <div class="homepage-blog-tile__title">
            <%= truncate(article.title, length: 70) %>
          </div>

          <div>
            <div class="homepage-blog-tile__author">
              <%= article.data.author %>
            </div>

            <div class="homepage-blog-tile__date">
              <%= Time.parse(article.data.date).strftime("%B %e, %Y") %>
            </div>
          </div>
        </div>
      </a>
    <% end %>
